<h1>Show</h1>

<% if @user.profile_picture.attached? && @user.profile_picture.representable? %>
  <%= image_tag(@user.profile_picture, :size => '100x100') %>
<% else %>
  <%= image_tag('account-circle-outline.svg', :size => '35x35', class: "rounded-circle") %>
<% end %>
<%= @user.full_name %>
<%= @user.username %>
<% if @user.id == current_user.id %>
  <%= link_to "Edit Profile", edit_user_registration_path %>
<% else %>
  <%= button_to "Add Friend", friendships_path(friend_id: @user.id)%>
<% end %>