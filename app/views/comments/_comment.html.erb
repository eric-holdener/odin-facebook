<div class="container">
  <div class="row align-items-center d-flex pt-2">
    <div class="col flex-grow-0">
      <% if comment.user.profile_picture.attached? && comment.user.profile_picture.representable? %>
        <%= link_to image_tag(comment.user.profile_picture, :size => '25x25', class: "rounded-circle"), profile_url(id: comment.user.id) %>
      <% else %>
        <%= link_to image_tag('account-circle-outline.svg', :size => '25x25', class: "rounded-circle"), profile_url(id: comment.user.id) %>
      <% end %>
    </div>
    <div class="col">
      <div class="align-self-bottom">
        <%= link_to comment.user.full_name, profile_url(id: comment.user.id), class: "text-black small text-decoration-none" %>
      </div>
    </div>
  </div>
  <div class="row small">
    <div class="col">
      <%= comment.content %>
    </div>
  </div>
</div>
