<p style="color: green"><%= notice %></p>
<div class="container">
  <div class="row">
    <div class="col">
      <%= render partial: 'profile', locals: {user: current_user} %>    
    </div>
    <div class="col">
      <%= render 'feed' %>
    </div>
    <div class="col">
      <% unless current_user.friendships.accepted_friend.empty?%>
        <div class="container">
          <div class="row">
            <h2 class="text-white">
              Friends
            </h2>          
          </div>
        </div>
        <%= render 'friends' %>
      <% end %>
    </div>
  </div>
</div>



