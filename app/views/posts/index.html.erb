<p style="color: green"><%= notice %></p>
<div class="container">
  <div class="row">
    <div class="col">
      <%= render partial: 'shared/profile', locals: {user: current_user} %>    
    </div>
    <div class="col">
      <div class="row">
        <div>
          <div class="bg-light rounded-3 pb-3 mb-3">
            <div class="container">
              <%= render 'form' %>
            </div>        
          </div>
        </div>          
      </div>
      <div class="row">
        <%= render 'shared/feed' %>
      </div>
      
    </div>
    <div class="col">
      <% unless current_user.friendships.accepted_friend.empty?%>
        <div class="container">
          <div class="row">
            <h2 class="text-white">
              Friends
            </h2>          
          </div>
        </div>
        <%= render 'shared/friends' %>
      <% end %>
    </div>
  </div>
</div>



